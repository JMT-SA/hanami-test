<h2>Login</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :session, routes.sessions_path do
    div class: 'input' do
      label      :name
      text_field :name
    end

    div class: 'input' do
      label      :password
      text_field :password
    end

    div class: 'controls' do
      submit 'Login'
    end
  end
%>

